<%= form_with(model: group, local: true) do |form| %>
    <% if group.errors.any? %>
      <div class="mb-4 text-center">
        <p class="text-danger text-sm"><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</p>
        <ul class="text-danger text-sm" style="list-style: none;">
          <% group.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, "Nom de la PolyBanque" %>
      <%= form.text_field :name, placeholder: "Ex: Coloc 2024, Vacances..." %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description (optionnel)" %>
      <%= form.text_area :description, placeholder: "Petite description...", rows: 3 %>
    </div>

    <div class="mt-4">
      <%= form.submit "Sauvegarder", class: "btn btn-primary" %>
    </div>
<% end %>