<% page_header("Index", "Gérez vos PolyBanques") %>

<div id="groups-list" class="flex flex-col gap-4">
  <% if @groups.any? %>
    <%= render @groups %>
  <% else %>
    <div class="card text-center" style="padding: 40px;">
      <p class="text-muted">Aucun groupe pour le moment.</p>
    </div>
  <% end %>
</div>

<div class="text-center" style="margin-top: 30px;">
  <%= link_to "Créer une PolyBanque", new_group_path, id: "create-bank", class: "btn btn-ghost" %>
</div>