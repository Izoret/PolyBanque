<% page_header "Inscription" %>

<div class="auth-wrapper">
  <div class="card">
    <div class="text-center mb-4">
      <h2>Rejoignez-nous</h2>
      <p class="text-muted text-sm">Créez votre compte en quelques secondes</p>
    </div>

    <%= form_with model: @user, url: sign_up_path do |form| %>
      <% if form.object.errors.any? %>
        <div class="mb-4 text-center">
          <p class="text-danger text-sm"><%= form.object.errors.full_messages.first %></p>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :username, "Nom d'utilisateur" %>
        <%= form.text_field :username, required: true, autocomplete: "username", placeholder: "Pseudo" %>
      </div>

      <div class="form-group">
        <%= form.label :email_address, "E-mail" %>
        <%= form.email_field :email_address, required: true, autocomplete: "email", placeholder: "vous@exemple.com" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Mot de passe" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", maxlength: 30 %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirmation" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 30 %>
      </div>

      <div class="mt-4">
        <%= form.submit "S'inscrire", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Déjà un compte ? Se connecter", new_session_path, class: "text-sm text-muted" %>
  </div>
</div>