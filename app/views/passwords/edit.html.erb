<% page_header "Nouveau mot de passe" %>

<div class="auth-wrapper">
  <div class="card">
    <div class="text-center mb-4">
      <h2>Mise à jour</h2>
      <p class="text-muted text-sm">Choisissez un nouveau mot de passe sécurisé.</p>
    </div>

    <% if flash[:alert] %>
      <div class="mb-4 text-center text-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: password_path(params[:token]), method: :put do |form| %>
      <div class="form-group">
        <%= form.label :password, "Nouveau mot de passe" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", maxlength: 30 %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Répéter le mot de passe" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 30 %>
      </div>

      <div class="mt-4">
        <%= form.submit "Sauvegarder", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>