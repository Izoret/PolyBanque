<% page_header "Bienvenue" %>

<div class="auth-wrapper">
  <div class="card">
    <div class="text-center mb-4">
      <h2>Se connecter !</h2>
    </div>

    <%= form_with url: session_path do |form| %>
      <div class="form-group">
        <%= form.label :email_address, "Adresse e-mail" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "vous@exemple.com" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Mot de passe" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 30 %>
      </div>

      <div class="mt-4">
        <%= form.submit "Se connecter", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4 flex flex-col gap-1">
    <%= link_to "Créer un compte", sign_up_path, class: "text-primary font-bold" %>
    <%= link_to "Mot de passe oublié ?", new_password_path, class: "text-sm text-muted" %>
  </div>
</div>